{
    "name": "dairy-farm/management-system",
    "description": "Dairy Farm Management System",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse",
        "phpcs": "phpcs --standard=PSR12 --extensions=php .",
        "phpcbf": "phpcbf --standard=PSR12 --extensions=php .",
        "check-all": [
            "@cs-check",
            "@stan",
            "@phpcs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}